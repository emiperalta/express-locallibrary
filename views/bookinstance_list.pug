extends layout

block content
  h1= title

  ul
    each val in bookinstance_list
      li.nostyle
        a(href=val.url class='nodeco') #{val.book.title} / #{val.imprint} &nbsp;&nbsp;
        if val.status=='Available' 
          span.text-success(class='bg-status-success')  #{val.status}
        else if val.status=='Maintenance'
          span(class='bg-status-danger')  #{val.status}
        else
          span(class='bg-status-warning')  #{val.status}
        if val.status!='Available'
          span   (Due: #{val.due_back_formatted})
    else
      p There are no book copies in this library.

  br
  hr
  br
  p
    a.abutton(href='/catalog/bookinstance/create') Create new book-instance